generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product { // promjenio ime nakon pulla iz products u Product
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  imageUrl    String
  name        String
  price       Int
  createdAt   DateTime @default(now()) // dodano ručno nakon pulla sa mongoDB
  updatedAt   DateTime @updatedAt // dodano ručno nakon pulla sa mongoDB

  @@map("products") // vezano za kolekciju products
}
